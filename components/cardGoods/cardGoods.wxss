html {
  padding: 0;
  margin: 0;
}

.card-goods {
  position: relative;
  width: 100%;
}

.card-goods .card-goods-container {
  width: 95%;
  border-radius: 20rpx;
  border: 1px solid transparent;
  display: flex;
  flex-direction: column;
}

.card-goods .card-goods-container .goods-image-container {
  position: relative;
  display: block;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  width: 100%;
  height: 154rpx;
}

.card-goods .card-goods-container .goods-image-container .goods-image {
  display: block;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  width: 100%;
  height: 154rpx;
}

.card-goods .card-goods-container .goods-image-container .goods-image-mask {
  width: 100%;
  height: 154rpx;
  line-height: 154rpx;
  text-align: center;
  font-size: 35rpx;
  font-weight: bold;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.3);
  color: white;
  position: absolute;
  left: 0;
  top: 0;
}

.card-goods .card-goods-container .card-goods-footer {
  flex-grow: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 5rpx 0 10rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: #fa962d;
}

.card-goods .card-goods-container .card-goods-footer .price {
  font-size: 30rpx;
  line-height: 30rpx;
  box-sizing: border-box;
  padding: 10rpx 5rpx 0;
  width: 100%;
  text-align: center;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-goods .card-goods-container .card-goods-footer .textAnimation {
  background: -webkit-linear-gradient(135deg, #2d2d2d, #e4e4e4);
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
  background-size: 500% 500%;
  animation: gradientAnimation 3s linear infinite alternate forwards;
}

@keyframes gradientAnimation {
  0% {
    background-position: 0% 0%;
  }
  100% {
    background-position: 400% 400%;
  }
}

.card-goods .card-goods-container .card-goods-footer .animation_0 {
  animation: gradientAnimation_0 1s ease-in-out infinite alternate forwards;
}

@keyframes gradientAnimation_0 {
  0% {
    transform: skew(30deg, 0);
  }
  50% {
    transform: skew(0, 0);
  }
  100% {
    transform: skew(-30deg, 0);
  }
}

.card-goods .card-goods-container .card-goods-footer .animation_1 {
  background-size: 300% 300%;
  animation: gradientAnimation_1 1s ease infinite alternate forwards;
}

@keyframes gradientAnimation_1 {
  0% {
    background-position: 0% 0%;
  }
  100% {
    background-position: 200% 200%;
  }
}

.card-goods .card-goods-container .card-goods-footer .animation_2 {
  background-size: 500% 500%;
  animation: gradientAnimation_2 3s linear infinite alternate forwards;
}

@keyframes gradientAnimation_2 {
  0% {
    background-position: 0% 0%;
  }
  100% {
    background-position: 400% 400%;
  }
}

.card-goods .card-goods-container .card-goods-footer .animation_3 {
  background-size: 300% 300%;
  animation: gradientAnimation_3 1.5s cubic-bezier(0.68, -0.55, 0.27, 1.55) infinite alternate forwards;
}

@keyframes gradientAnimation_3 {
  0% {
    background-position: 0% 0%;
  }
  100% {
    background-position: 200% 200%;
  }
}

.card-goods .card-goods-container .card-goods-footer .original-price {
  font-size: 25rpx;
  line-height: 25rpx;
  color: white;
  box-sizing: border-box;
  padding: 10rpx 10rpx 0;
  width: 100%;
  text-align: center;
  text-decoration: line-through;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
