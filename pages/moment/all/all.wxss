.container{
  position: relative;
  z-index: 1;
  padding-top: 90rpx;
}
.nav{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 10;
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #F5F5F5;
}
.nav .item{
  flex: 1;
  text-align: center;
}
.nav .item text{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #999999;
  letter-spacing: 0;
  display: inline-block;
  height: 90rpx;
  line-height: 90rpx;
}
.nav .cur text{
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 0;
  border-bottom: 4rpx solid #04B64E;
}
.list{
  margin-left: 30rpx;
}
.list .item{
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
  padding-right: 30rpx;
}
.list .item .pic{
  width: 80rpx;
  min-width:80rpx;
  height: 80rpx;
  border-radius: 6rpx;
}
.list .item .cont{
  flex: 1;
  margin: 0 24rpx;
}
.list .item .name{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: center;
}
.list .item .status_green{
  border: 1px solid #04B64E;
  color: #04B64E;
}
.list .item .status_gray{
  border: 1px solid #999999;
  color: #999999;
}
.list .item .status{
  display: inline-block;
  font-family: PingFangSC-Regular;
  border-radius: 4rpx;
  font-size: 22rpx;
  height: 32rpx;
  padding: 0 10rpx;
  line-height: 32rpx;
  margin-left: 18rpx;
}
.list .item .time{
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #CCCCCC;
  letter-spacing: 0;
}
.issue{
  position: fixed;
  right: 30rpx;
  bottom: 200rpx;
  z-index: 10;
  background-color: #04B64E;
  border-radius: 100%;
  width: 110rpx;
  height: 110rpx;
}
.issue image{
  width: 100%;
  height: 100%;
}