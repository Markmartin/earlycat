.head{
  display: flex;
  margin: 0 26rpx;
  align-items: center;
  background: #F7F7F7;
  border-radius: 32rpx;
  height: 68rpx;
  padding: 0 26rpx;
  margin-bottom: 24rpx;
}
.head image{
  width: 28rpx;
  min-width: 28rpx;
  height: 28rpx;
}
.head input{
  margin-left: 20rpx;
  flex: 1;
  height: 68rpx;
  line-height: 68rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333;
}
.searchCover{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 70rpx;
  z-index: 100;
}
.title{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}
.title .tt{
  font-family: PingFangSC-Semibold;
  font-size: 36rpx;
  color: #333333;
  letter-spacing: 0;
}
.title .txt{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #333333;
  letter-spacing: 0;
}
.title .txt text{
  vertical-align: middle;
}
.title .txt image{
  width: 20rpx;
  height: 20rpx;
  margin-left: 2rpx;
  vertical-align: middle;
}

.topic {
  width: 750rpx;
  margin-bottom: 52rpx;
  white-space: nowrap;
}

.topic .item {
  display: inline-block;
  width: 110rpx;
  margin-left: 30rpx;
  overflow: hidden;
  text-align: center;
}
.topic .item:last-child {
  margin-right: 30rpx;
}
.topic .item .img{
  width: 110rpx;
  height: 110rpx;
  display: block;
  margin-bottom: 24rpx;
  border-radius: 6rpx;
}
.topic .item .tt{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: center;
}
.discuss{
  padding: 0 30rpx;
}
.discuss .item{
  margin-bottom: 60rpx;
  display: flex;
  align-items: flex-start;
}
.discuss .item .number{
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #666666;
  letter-spacing: 0;
  text-align: center;
  margin-right: 24rpx;
}
.discuss .item .cont{
  flex: 1;
}
.discuss .item .cont .tt{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 0;
  margin-bottom: 24rpx;
}
.discuss .item .info image{
  width:40rpx;
  height:40rpx;
  border-radius: 6rpx;
  vertical-align: middle;
}
.discuss .item .info .name{
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #666666;
  letter-spacing: 0;
  margin-left: 16rpx;
  margin-right: 40rpx;
  vertical-align: middle;
}
.discuss .item .info .time{
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #CCCCCC;
  letter-spacing: 0;
  vertical-align: middle;
}
.discuss .item .pic{
  width:160rpx;
  height:104rpx;
  margin-left: 28rpx;
  border-radius: 8rpx;
}