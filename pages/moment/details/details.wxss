.container{
  /* padding: 30rpx; */
  padding-bottom: 100rpx;
}
.title{
  padding: 0 30rpx;
  font-size:40rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:56rpx;
  margin-bottom: 40rpx;
}
.user{
  display: flex;
  /* align-items: center; */
  margin-bottom: 40rpx;
  padding: 0 30rpx;
}
.user .pic{
  width: 70rpx;
  min-width: 70rpx;
  height: 70rpx;
  border-radius: 100%;
  overflow: hidden;
  margin-right: 24rpx;
}
.user .info{
  flex: 1;
}
.user .info .name{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.user .info .time{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:34rpx;
}
.user .other{
  text-align: right;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:34rpx;
}
.content{
  padding: 0 30rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.picList{
  padding: 0 30rpx;
}
.picList image{
  display: block;
  margin-top: 24rpx;
  width: 100%;
}



.details-footer{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background: #fff;
  border-top: #F5F5F5 1rpx solid;
  padding: 12rpx 40rpx;
}
.details-footer input{
  flex: 1;
  height:68rpx;
  line-height: 68rpx;
  background:rgba(247,247,247,1);
  border-radius:34rpx;
  padding: 0 28rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#333;
}
.details-footer .btn{
  margin: 0;
  padding: 0;
  background: none;
  height: 68rpx;
  margin-left: 50rpx;
}
.details-footer .btn image{
  margin-top: 14rpx;
  width: 40rpx;
  height: 40rpx;
}


.details-tool{
  margin-top: 60rpx;
  position: relative;
}
.details-nav{
  padding: 0 30rpx;
  margin-bottom: 48rpx;
}
.details-nav .item{
  margin-right: 60rpx;
  display: inline-block;
  font-size: 28rpx;
  color: #666;
  padding-bottom: 20rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  position: relative;
}
.details-nav .item text{
  position: absolute;
  right: -20rpx;
  top: 0;
  font-size:22rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.details-nav .current{
  font-size:28rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  border-bottom: #04B64E 1rpx solid;
}
.details-nav-cont{
  position: relative;
  min-height: 500rpx;
}

.details-footer .box2{
  height: 100rpx;
}
.details-footer .box2 input{
  flex: 1;
  background: #f2f1f6;
  border-radius: 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 30rpx;
}
.details-footer .box2 button{
  margin-left: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  width: 120rpx;
  font-size: 32rpx;
  background: #fd651f;
  color: #fff;
}
.comment-list{
  padding-left: 30rpx;
}
.comment-list .item{
  display: flex;
  align-items: flex-start;
  position: relative;
  margin-bottom: 40rpx;
  border-bottom: #F5F5F5 1prx solid;
}
.comment-list .avatar,.comment-list .avatar image{
  width: 60rpx;
  min-width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  overflow: hidden;
}
.comment-list .cont{
  flex: 1;
  margin-left: 20rpx;
  border-bottom: #F5F5F5 1rpx solid;
  padding-bottom: 40rpx;
}
.comment-list .cont .top{
  display: flex;
  justify-content: space-between;
  padding-right: 30rpx;
}
.comment-list .cont .reply{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
}
.comment-list .cont .name{
  font-size:28rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.comment-list .cont .name text{
  font-size:22rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(204,204,204,1);
  margin-left: 12rpx;
}
.comment-list .cont .time{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.comment-list .cont .txt{
  margin-top: 6rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:40rpx;
}

.like-list{
  padding-left: 30rpx;
}
.like-list .item{
  position: relative;
}
.like-list .avatar,.like-list .avatar image{
  min-width: 60rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  overflow: hidden;
}
.like-list .cont{
  flex: 1;
  margin-left: 20rpx;
  padding: 36rpx 0;
  border-bottom: #F5F5F5 1rpx solid;
}
.like-list .cont .name{
  font-size:28rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.like-list .cont .time{
  font-size:24rpx;
  margin-left: 12rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(204,204,204,1);
  line-height: 32rpx;
}