html {
  padding: 0;
  margin: 0;
}

.after-sale-order-detail {
  width: 100%;
  height: 100vh;
  background-color: #f4f4f4;
}

.after-sale-order-detail .header {
  box-sizing: border-box;
  height: auto;
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  background-color: white;
}

.after-sale-order-detail .header .apply-refund-time {
  line-height: 50rpx;
  font-size: 30rpx;
}

.after-sale-order-detail .header .order-no {
  margin-top: 10rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}

.after-sale-order-detail .header .refund-reason {
  margin-top: 10rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}

.after-sale-order-detail .header .refund-description {
  margin-top: 10rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}

.after-sale-order-detail .header .line {
  margin-top: 10rpx;
  width: 100%;
  height: 1px;
  background-color: #ececec;
}

.after-sale-order-detail .header .refund-total-amount {
  line-height: 60rpx;
  font-size: 30rpx;
}

.after-sale-order-detail .header .refund-total-amount .amount {
  color: #b4282d;
}

.after-sale-order-detail .goods-list {
  box-sizing: border-box;
  margin-top: 10rpx;
  padding: 0 20rpx 10rpx;
  width: 100%;
  background-color: white;
}

.after-sale-order-detail .goods-list .goods-header {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}

.after-sale-order-detail .goods-list .goods-header .header-label {
  font-size: 30rpx;
  line-height: 80rpx;
}

.after-sale-order-detail .goods-list .goods-header .order-status {
  color: #b4282d;
  font-size: 30rpx;
  line-height: 80rpx;
}

.after-sale-order-detail .goods-list .goods {
  display: flex;
  align-items: center;
  height: 220rpx;
  border-top: 1px solid #ececec;
  border-bottom: 1px solid #ececec;
}

.after-sale-order-detail .goods-list .goods .goods-image-container {
  width: 200rpx;
  height: 200rpx;
}

.after-sale-order-detail .goods-list .goods .goods-image-container .goods-icon {
  position: absolute;
  left: 0;
  width: 60rpx;
  height: 60rpx;
}

.after-sale-order-detail .goods-list .goods .goods-image-container .goods-image {
  width: 200rpx;
  height: 200rpx;
}

.after-sale-order-detail .goods-list .goods .goods-info {
  box-sizing: border-box;
  width: 390rpx;
  height: 200rpx;
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: column;
}

.after-sale-order-detail .goods-list .goods .goods-info .goods-name {
  line-height: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.after-sale-order-detail .goods-list .goods .goods-info .goods-specification {
  margin-top: 10rpx;
  line-height: 30rpx;
  font-size: 25rpx;
}

.after-sale-order-detail .goods-list .goods .goods-info .goods-number {
  margin-top: 10rpx;
  line-height: 30rpx;
  font-size: 25rpx;
}

.after-sale-order-detail .goods-list .goods .goods-refund-amount {
  width: 120rpx;
  height: 200rpx;
}

.after-sale-order-detail .goods-list .goods .goods-refund-amount .refund-amount-label {
  text-align: right;
}

.after-sale-order-detail .goods-list .goods .goods-refund-amount .refund-amount {
  padding: 10rpx 0;
  text-align: right;
  color: #b4282d;
  font-size: 30rpx;
  line-height: 30rpx;
}
