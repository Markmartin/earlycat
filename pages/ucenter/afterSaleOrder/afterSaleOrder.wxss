html {
  padding: 0;
  margin: 0;
}

.after-sale-order {
  width: 100%;
  height: 100vh;
}

.after-sale-order .order-status-switch-container {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  width: 100%;
  background-color: white;
  height: 85rpx;
  display: flex;
}

.after-sale-order .order-status-switch-container .switch-item {
  width: 20%;
  height: 85rpx;
  text-align: center;
}

.after-sale-order .order-status-switch-container .switch-item .label {
  display: inline-block;
  padding: 0 5rpx;
  line-height: 85rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.after-sale-order .order-status-switch-container .switch-item .switch-item-normal {
  color: #9a9ba1;
  border: none;
}

.after-sale-order .order-status-switch-container .switch-item .switch-item-active {
  color: #ab956d;
  border-bottom: 4rpx solid #ab956d;
}

.after-sale-order .order-list {
  position: relative;
  top: 85rpx;
  width: 100%;
  height: calc(100vh - 100rpx);
}

.after-sale-order .no-data {
  position: relative;
  top: 85rpx;
  width: 100%;
  height: calc(100vh - 100rpx);
  line-height: calc(100vh - 100rpx);
  text-align: center;
  font-size: 30rpx;
}
