.address-map .header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.address-map .header .label-container {
  width: 90rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
}

.address-map .header .label-container .arrow {
  margin-left: 10rpx;
  width: 30rpx;
  height: 30rpx;
}

.address-map .header .search-input-container {
  margin-left: 20rpx;
  width: 570rpx;
  height: 70rpx;
  border: 1px solid #c4c4c4;
  border-radius: 40rpx;
}

.address-map .header .search-input-container .search-input {
  margin: 15rpx 0 0 40rpx;
  width: 500rpx;
}

.address-map .address-list {
  position: relative;
  top: 120rpx;
  width: 100%;
  height: calc(100vh - 120rpx);
}

.address-map .address-list .address-cell {
  padding: 20rpx;
  border-bottom: 1px solid #d3d3d3;
}

.address-map .address-list .address-cell .address-name {
  font-size: 35rpx;
  line-height: 45rpx;
  font-weight: bold;
}

.address-map .address-list .address-cell .address {
  margin-top: 20rpx;
  font-size: 30rpx;
  line-height: 40rpx;
}
