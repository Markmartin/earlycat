page{
    background: #F5F5F5;
}
.container{
    padding: 24rpx;
}
.topic-list{
    width: 100%;
}

.topic-list .item{
    width: 100%;
    overflow: hidden;
    background: #fff;
    margin-bottom: 24rpx;
    border-radius: 12rpx;
}

.topic-list .img{
    display: block;
    width: 100%;
    height: 352rpx;
    border-top-left-radius: 12rpx;
    border-top-right-radius: 12rpx;
}
.topic-list .info{
    padding: 20rpx;
}
.topic-list .title{
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #333333;
    letter-spacing: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 4rpx;
}
.topic-list .txt{
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #666666;
    letter-spacing: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-right: 20rpx;
}
.topic-list .browse{
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #999999;
    letter-spacing: 0;
}