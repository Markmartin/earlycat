/* pages/community/details/details.wxss */
 @import "../../lib/wxParse/wxParse.wxss";
.details-head{
  padding: 30rpx;
  background: #fff;
}
.details-head .avatar,.details-head .avatar image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  overflow: hidden;
}
.details-head .info{
  /* margin-left: 20rpx; */
  flex: 1;
}
.details-head .info .time{
  font-size: 22rpx;
  color: #b9b9b9;
}
.details-cont{
  position: relative;
  background: #fff;
  border-bottom: #f1f1f1 20rpx solid;
}
.details-cont .txt{
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  line-height: 40rpx;
}
.details-cont .browse{
  padding: 30rpx;
  color: #b9b9b9;
  font-size: 24rpx;
}
.details-cont .pic-list{
  flex-wrap: wrap;
  margin-right: -20rpx;
}
.details-cont .pic-list .pic-item{
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.details-cont .pic-list-1 .pic-item{
  width: 750rpx;
  height: 750rpx;
}
.details-cont .pic-list-2 .pic-item{
  width: 365rpx;
  height: 365rpx;
}
.details-cont .pic-list-3 .pic-item{
  width: 236.6rpx;
  height: 236.6rpx;
}

.details-footer{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background: #fff;
  min-height: 100rpx;
  border-top: #f1f1f1 1rpx solid;
  padding: 0 30rpx;
}
.details-footer .box1{
  height: 100rpx;
}
.details-footer .input{
  flex: 1;
  background: #f2f1f6;
  border-radius: 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 30rpx;
}
.details-footer .icons-btn{
  margin-left: 60rpx;
  position: relative;
  z-index: 1;
  line-height: normal;
  background: none;
}
.details-footer .icons-btn .number{
  position: absolute;
  left: 20rpx;
  top: -10rpx;
  z-index: 5;
  color: #fff;
  background: #fd651f;
  padding: 0 8rpx;
  height: 22rpx;
  line-height: 22rpx;
  font-size: 20rpx;
  border-radius: 8rpx;
}
.details-footer .icons-btn .iconfont{
  color: #b9b9b9;
  position: relative;
  z-index: 1;
}
.details-footer .icons-btn .icon-fenxiang{
  font-size: 40rpx;
}
.details-footer .icons-btn .icon-pinglun{
  font-size: 40rpx;
}
.details-footer .icons-btn .icon-xihuan{
  font-size: 50rpx;
}
.details-footer .icons-btn .icon-xihuan-true{
  color: #fd651f;
}

.details-tool{
  position: relative;
}
.details-nav{
  border-bottom: #f1f1f1 1rpx solid;
  height: 100rpx;
}
.details-nav .item{
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #666;
}
.details-nav .item text{
  display: block;
  padding: 0 20rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.details-nav .current text{
  color: #fd651f;
  border-bottom: 4rpx #fd651f solid;
}
.details-nav-cont{
  position: relative;
}
.details-nav-cont scroll-view{
  padding-bottom: 100rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
}

.details-footer .box2{
  height: 100rpx;
}
.details-footer .box2 input{
  flex: 1;
  background: #f2f1f6;
  border-radius: 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 30rpx;
}
.details-footer .box2 button{
  margin-left: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  width: 120rpx;
  font-size: 32rpx;
  background: #fd651f;
  color: #fff;
}
.comment-list{
  padding: 30rpx;
}
.comment-list .item{
  position: relative;
  margin-bottom: 30rpx;
  align-items: initial;
}
.comment-list .avatar,.comment-list .avatar image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  overflow: hidden;
}
.comment-list .cont{
  margin-left: 30rpx;
}
.comment-list .cont .name{
  /* margin-top: 10rpx; */
}
.comment-list .cont .time{
  font-size: 22rpx;
  color: #b9b9b9;
}
.comment-list .cont .txt{
  line-height: 40rpx;
  padding: 10rpx 0;
}

.like-list{
  margin: 0 30rpx;
}
.like-list .item{
  position: relative;
  padding: 30rpx 0;
  border-bottom: #f1f1f1 1rpx solid;
}
.like-list .avatar,.like-list .avatar image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  overflow: hidden;
}
.like-list .cont{
  margin-left: 30rpx;
}

