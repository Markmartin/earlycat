.container{
  padding: 0 30rpx;
}
.navBar{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  background-color: #fff;
  overflow: hidden;
  z-index: 100;
  overflow: hidden;
}
.navBar .return{
  display: inline-block;
  position: relative;
}
.navBar .return image{
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
}
.navBar button{
  position: absolute;
  top: 0;
  padding: 0 24rpx;
  min-width: 154rpx;
  background:rgba(4,182,78,1);
  border-radius:30rpx;
  margin-right: 20rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.navBar button image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.navBar button text{
  vertical-align: middle;
  margin-left: 10rpx;
}
.title{
  width: 100%;
  font-family: PingFangSC-Regular;
  font-size: 20px;
  color: #333;
  margin-bottom: 28rpx;
}
.content{
  width: 100%;
  min-height: 160rpx;
}
.content textarea{
  font-family: PingFangSC-Regular;
  width: 100%;
  font-size: 28rpx;
  color: #333;
}
.pic-cont{
  margin: 30rpx 0;
}
.pic-list{
  position: relative;
  margin-right: -45rpx;
  flex-wrap: wrap;
}
.pic-list .item{
  width: 200rpx;
  height: 200rpx;
  margin-right: 45rpx;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 1;
}
.pic-list .item .img-delete{
  position: absolute;
  left: -10rpx;
  top: -10rpx;
  z-index: 2;
  width: 48rpx;
  height: 48rpx;
}
.pic-list .item .pic{
  width: 100%;
  height: 100%;
  position: relative;
  border-radius: 12rpx;
  z-index: 1;
}