.container{
}
.head{
  display: flex;
  margin: 0 26rpx;
  align-items: center;
  background: #F7F7F7;
  border-radius: 32rpx;
  height: 68rpx;
  padding: 0 26rpx;
  margin-bottom: 24rpx;
}
.head image{
  width: 28rpx;
  min-width: 28rpx;
  height: 28rpx;
}
.head input{
  margin-left: 20rpx;
  flex: 1;
  height: 68rpx;
  line-height: 68rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333;
}
.searchCover{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 70rpx;
  z-index: 100;
}
.issue{
  position: fixed;
  right: 30rpx;
  bottom: 200rpx;
  z-index: 10;
  background-color: #04B64E;
  border-radius: 100%;
  width: 110rpx;
  height: 110rpx;
}
.issue image{
  width: 100%;
  height: 100%;
}

.list{
  padding: 0 30rpx;
  margin-top: 40rpx;
}
.list .item{
  display: flex;
  margin-bottom: 50rpx;
}
.list .item .pic{
  min-width: 200rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
}
.list .item .cont{
  flex: 1;
  margin-left: 40rpx;
}
.list .item .tt{
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:42rpx;
  margin-bottom: 14rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.list .item .user{
  margin-bottom: 14rpx;
}
.list .item .user .avatar{
  min-width: 48rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 100%;
}
.list .item .user .name{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:40rpx;
  margin-left: 20rpx;
}

.list .item .info{
  
}
.list .item .info .txt1{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
  width: 300rpx;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.list .item .info image{
  width: 30rpx;
  min-width: 30rpx;
  height: 30rpx;
  margin: 0 12rpx;
}
.list .item .info .txt2{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:34rpx;
}


.location{
  margin-top: 50%;
  font-size: 32rpx;
  text-align: center;
}
.location button{
  margin: 0 auto;
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
  background-color: #f9be49;
  color: #fff;
}