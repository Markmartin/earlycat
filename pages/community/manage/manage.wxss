.list{
  position: relative;
  z-index: 1;
  padding-bottom: 140rpx;
}
.item{
  background: #fff;
  margin: 30rpx;
  box-shadow: 0rpx 1rpx 20rpx #ebebeb;
  border-radius: 20rpx;
  position: relative;
  padding: 50rpx 30rpx;
}
.delete{
  position: absolute;
  right: 0;
  top: 0;
  border-bottom-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  background: #e54a38;
  color: #fff;
}
.item .select{
  position: absolute;
  right: 0;
  bottom: 0;
  border-top-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  font-size: 24rpx;
  padding: 4rpx 10rpx;
}
.item .cur.select{
  background: #51d7a1;
  color: #fff;
}
.item .set.select{
  background: #f1f1f1;
  color: #666;
}
.item .head .tt{
  font-size: 32rpx;
  font-weight: 600;
}
.item .head .tt text{vertical-align: middle;}
.item .head .tt .tag{
  background:rgba(234,255,243,1);
  border-radius:6rpx;
  margin-left: 12rpx;
  border:1px solid rgba(4,182,78,1);
  display: inline-block;
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 10rpx;
  font-size:20rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(4,182,78,1);
}
.item .head .txt{
  font-size: 28rpx;
  margin-top: 10rpx;
}
.addBtn{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  z-index: 100;
}
.addBtn .btn{
  margin: 30rpx;
  background-color: #e54a38;
  color: #fff;
  height: 90rpx;
  border-radius: 20rpx;
  text-align: center;
  font-size: 32rpx;
  line-height: 90rpx;
}
.addBtn .btn-gray{background-color: #ccc;}

.empty-view {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}