.add{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  height: 120rpx;
  background: #fff;
  padding: 0 30rpx;
}
.add .btn{
  width: 100%;
  height: 90rpx;
  background: #fd651f;
  text-align: center;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
  border-radius: 50rpx;
  margin: 0 auto;
  margin-top: 15rpx;
}
.list{
  position: relative;
  z-index: 1;
  padding-bottom: 120rpx;
}
.item{
  background: #fff;
  margin: 30rpx;
  box-shadow: 0rpx 1rpx 20rpx #ebebeb;
  border-radius: 20rpx;
  position: relative;
  padding: 40rpx 30rpx;
}
.item .head{
  margin-bottom: 20rpx;
}
.item .head .tt{
  font-size: 32rpx;
  font-weight: 600;
  flex: 1;
}
.item .head .state-tag{
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  border: #ff8900 1rpx solid;
  color: #ff8900;
  font-size: 20rpx;
}
.item .household{
  margin-top: 20rpx;
}
.item .household .name{
  font-size: 26rpx;
  width: 20%;
}
.item .household .mobile{
  font-size: 26rpx;
  padding: 0 10rpx;
  width: 35%;
}
.item .household .identity-tag{
  background: #ff8900;
  color: #fff;
  font-size: 26rpx;
  padding: 4rpx 20rpx;
  border-radius: 20rpx;
}
.item .household .operation{
  font-size: 26rpx;
  color: #b9b9b9;
  margin-left: 10rpx;
  position: absolute;
  right: 30rpx;
}

.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}
 
.modalDlg{
    width: 580rpx;
    height: 500rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 36rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 50rpx;
}

.modalDlg .d-flex {
  width: 100%;
  text-align: right;
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;

}

.modalDlg label {
  margin-right: 20rpx;
  width: 40%;
}

.modalDlg button {
  margin-top: 100rpx;
  background: #ff8900;
  color: #fff;
  padding: 0rpx 30rpx;
  border-radius: 20rpx;
}