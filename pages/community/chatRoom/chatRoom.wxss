/* pages/chatRoom/chatRoom.wxss */
.container{
  padding: 0 0rpx;
}
.chat-cont{
  position: relative;
  padding: 30rpx 30rpx;
  overflow: hidden;
  z-index: 1;
  padding-bottom: 120rpx;
}
.chat-cont .item{
  margin-bottom: 30rpx;
  align-items: stretch;
}
.chat-cont .pic{
  width: 80rpx;
  min-width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 10rpx;
  margin-right: 30rpx;
}
.chat-cont .pic image{
  width: 100%;
  height: 100%;
}

.chat-cont .item .messagePic{
  width: 200rpx;
  min-width: 200rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}
.chat-cont .item .messagePic image{
  width: 100%;
  height: 100%;
}

.chat-cont .cont{
  background: #f2f1f6;
  border-radius: 10rpx;
  position: relative;
  line-height: 40rpx;
  padding: 20rpx 20rpx;
}
.chat-cont .cont::after{
  content: "";
  position: absolute;
  left: -12rpx;
  top: 25rpx;
  width: 0;
  height: 0;
  border-top: 15rpx solid transparent;
  border-bottom: 15rpx solid transparent;
  border-right: 15rpx solid #f2f1f6;
}
.chat-cont .current{
  justify-content: flex-end;
}
.chat-cont .current .cont{
  background: #ffbb62;
  color: #fff;
}
.chat-cont .current .pic{
  margin-left: 30rpx;
  margin-right: 0;
}

.chat-cont .current .messagePic{
  margin-left: 30rpx;
  margin-right: 0;
}

.chat-cont .current .cont::after{
  left: auto;
  right: -12rpx;
  top: 25rpx;
  width: 0;
  height: 0;
  border-top: 15rpx solid transparent;
  border-bottom: 15rpx solid transparent;
  border-right: 0;
  border-left: 15rpx solid #ffbb62;
}
.chat-tool{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background: #f1f1f1;
  height: 120rpx;
  padding: 0 20rpx;
}
.chat-tool input{
  background: #fff;
  height: 80rpx;
  padding: 0 20rpx;
  flex: 1;
}
.chat-tool textarea{
  background: #fff;
  height: 80rpx;
  padding: 0 20rpx;
  flex: 1;
}
.chat-tool .other{
  width: 100rpx;
  height: 80rpx;
}
.chat-tool .other .more{
  width: 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 0 20rpx;
  overflow: hidden;
}
.chat-tool .other .more text{
  font-size: 60rpx;
  color: #666;
}
.chat-tool .other button{
  width: 120rpx;
  height: 80rpx;
  background: #ff8900;
  color: #fff;
  font-size: 28rpx;
  border: 0;
  box-shadow: none;
  line-height: 80rpx;
}