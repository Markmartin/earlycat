/* pages/community/community.wxss */
.container{
  padding: 0 30rpx;
}
.subject{
  width: 100%;
  height: 220rpx;
}
.subject image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.page-nav{
  width: 100%;
  display: flex;
  flex-direction:row;
  background: #fff;
  border-bottom: #ebebeb 2rpx solid;
}
.page-nav-fixed{
  padding: 0 30rpx;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  z-index: 10;
}
.nav-item{
  flex: 1;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  position: relative;
}
.nav-item-active::after{
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: -2rpx;
  height: 5rpx;
  background: #ff8900;
}

.cmmy-nav{
  height: 90rpx;
  text-align: center;
  background: #fff;
}
.cmmy-nav .item{
  flex: 1;
  border-right: #ddd 1rpx solid;
}
.cmmy-nav .item:last-child{border-right: 0;}
.issue-btn{
  position: fixed;
  right: 10rpx;
  bottom: 50rpx;
  z-index: 10;
  border-radius: 100%;
  width: 100rpx;
  height: 100rpx;
  background: #ff8900;
  color: #fff;
  text-align: center;
  overflow: hidden;
  line-height: 100rpx;
  box-shadow: 0rpx 4rpx 20rpx #ff8900;
}
.issue-btn .iconfont{
  font-size: 50rpx;
  font-weight: 800;
}


.community-list{
  position: relative;
  margin: 30rpx 0;
}
.community-item{
  box-shadow: 0rpx 1rpx 20rpx #ebebeb;
  background: #fff;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
}
.community-item .head{
  margin-bottom: 20rpx;
}
.community-item .head .avatar,.community-item .head .avatar image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  overflow: hidden;
}
.community-item .head .info{
  margin-left: 20rpx;
}
.community-item .head .info .name{
  /* color: #666; */
}
.community-item .head .info .time{
  font-size: 22rpx;
  color: #b9b9b9;
}
.community-item .cont{
  position: relative; 
}
.community-item .cont .txt{
  line-height: 40rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.community-item .cont .pic-list{
  flex-wrap: wrap;
  margin-right: -20rpx;
}
.community-item .cont .pic-list .pic-item{
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.community-item .cont .pic-list-1 .pic-item{
  width: 630rpx;
  height: 500rpx;
}
.community-item .cont .pic-list-2 .pic-item{
  width: 305rpx;
  height: 305rpx;
}
.community-item .cont .pic-list-3 .pic-item{
  width: 196.6rpx;
  height: 196.6rpx;
}
.community-item .tool{
  justify-content: space-between;
}
.community-item .tool .c-left .sit{
  background: #f2f1f6;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
}
.community-item .tool .c-left .icon-dingwei{
  font-size: 26rpx;
}
.community-item .tool .c-right{
  color: #b9b9b9;
}
.community-item .tool .c-right .im{
  margin-left: 20rpx;
}
.community-item .tool .c-right .txt{
  margin-left: 6rpx;
  vertical-align: middle;
}
.community-item .tool .c-right .iconfont{
  font-size: 32rpx;
  vertical-align: middle;
}
.community-item .tool .c-right .icon-xihuan{
  font-size: 40rpx;
}
.icon-xihuan-true{
  color: #fd651f;
}