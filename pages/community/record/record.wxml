<view class="container">
  <view class="nav d-flex">
    <view class="item {{type==='owner'?'current':''}}" data-type="owner" bindtap="navBtn">业主</view>
    <view class="item {{type==='visitor'?'current':''}}" data-type="visitor" bindtap="navBtn">访客</view>
  </view>
  <view class="wrap">
    <scroll-view scroll-y style="height: {{contHeight}}px; display: {{type === 'owner' ? 'block' : 'none'}}" bindscrolltolower="getRecordList">
      <view class="item" wx:for="{{recordList}}" wx:key="id">
        <view class="cont">
          <view class="d-flex">
            <view class="info">{{item.communityName}} - {{item.position}} ({{openType[item.type - 1]}})</view>
            <view class='tag'><view class="context">{{status[item.status]}}</view></view>
          </view>
          <view class="time">{{item.useTime}}</view>
        </view>
      </view>
    </scroll-view>
    <scroll-view scroll-y style="height: {{contHeight}}px; display: {{type === 'visitor' ? 'block' : 'none'}}" bindscrolltolower="getVisitRecordList">
      <view class="item d-flex" wx:for="{{visitRecordList}}" wx:key="id">
        <image src='{{item.avatar}}' class="pic"></image>
        <view class="cont">
          <view class="d-flex">
            <view class="info">{{item.communityName}} - {{item.position}} ({{openType[item.type - 1]}})</view>
            <view class="tag"><view class="context">{{status[item.status]}}</view></view>
          </view>
          <view class="d-flex">
            <view class="name">{{item.nickname}}</view>
            <view class="time">{{item.useTime}}</view>
          </view>
        </view>
      </view>
    </scroll-view>
  </view>
</view>