.container{
  padding: 30rpx;
  padding-bottom: 120rpx;
}
.item{
  margin-bottom: 40rpx;
}
.item .tt{
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:42rpx;
  margin-bottom: 20rpx;
}
.text-red{color: #FF383A;margin-right: 10rpx;}

.item .cont{
  border: #f5f5f5 1rpx solid;
  border-radius: 6rpx;
  padding: 0 20rpx;
}
.item .cont input{
  height: 66rpx;
  line-height: 66rpx;
  width: 100%;
  display: block;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#333;
}
.item .cont .radio,.item .cont .checkbox{
  display: block;
  height: 66rpx;
  line-height: 66rpx;
  border-bottom: #f5f5f5 1rpx solid;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#333;
}
.item .cont .radio:last-child,.item .cont .checkbox:last-child{border-bottom: 0;}
.item .cont radio .wx-radio-input {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #f5f5f5;
  border-radius: 100%;
  background: none;
  margin-right: 20rpx;
}
.item .cont radio .wx-radio-input.wx-radio-input-checked {
  border: 2rpx solid #04B64E !important;
}
.item .cont radio .wx-radio-input.wx-radio-input-checked::before {
  width: 60%;
  height: 60%;
  background: #04B64E;
  border-radius: 100%;
  content: '';
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.item .cont checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #f5f5f5;
  border-radius: 6rpx;
  margin-right: 20rpx;
}
.item .cont checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-color: #04B64E !important;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  font-size: 24rpx;
}
.footer{
  background-color: #fff;
  padding: 18rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
}
button{
  display: block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #04B64E;
  border-radius: 6rpx;
  font-size:36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#fff;
}