.container{
  padding: 30rpx;
}
.list{
}
.list .item{
  margin-bottom: 50rpx;
  display: flex;
  position: relative;
}
.list .item .pic{
  position: relative;
  width: 220rpx;
  min-width: 220rpx;
  height: 220rpx;
}
.list .item .pic .img{
  width: 220rpx;
  height: 220rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #ccc;
}
.list .item .pic .tag{
  position: absolute;
  left: -20rpx;
  top: 0;
  background-color: #FF383A;
  height: 34rpx;
  line-height: 34rpx;
  padding: 0 10rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  border-radius:0rpx 200rpx 200rpx 0rpx;
}
.list .item .pic .tag::after{
  content: "";
  position: absolute;
  left: 0rpx;
  top: 34rpx;
  width: 0;
  height: 0;
  border-top: 14rpx solid #C60002;
  border-left: 20rpx solid transparent;
}
.list .item .cont{
  flex: 1;
  margin-left: 20rpx;
  position: relative;
}
.list .item .tt{
  height: 84rpx;
  margin-bottom: 14rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:42rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;

}
.list .item .time{
  display: inline-block;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,56,58,1);
  height: 32rpx;
  line-height:32rpx;
  border-radius:2rpx;
  border:1rpx solid rgba(255,56,58,1);
  padding: 0 6rpx;
}
.list .item .price{
  font-size:36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,56,58,1);
  line-height:50rpx;
  text-align: left;
}
.list .item .price text{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,56,58,1);
}
.list .item .info{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: right;
}
.list .item .info .btn{
  margin-bottom: 8rpx;
  display: inline-block;
  width:160rpx;
  height:64rpx;
  line-height: 64rpx;
  line-height: 64rpx;
  background:rgba(4,182,78,1);
  border-radius:6rpx;
  text-align: center;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.list .item .info .txt{
  font-size:20rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-right: 16rpx;
}
.list .item .info .bar{
  position: relative;
  min-width: 160rpx;
  width: 160rpx;
  /* height: 10rpx; */
  border-radius:4rpx;
  border:1rpx solid rgba(4,182,78,1);
}
.list .item .info .bar view{
  height: 8rpx;
  background:rgba(4,182,78,1);
  border-radius:4rpx;
}