.container {
  padding: 30rpx 24rpx;
}

.card {
  background: #2DD473;
  border-radius: 6px;
  padding: 30rpx;
  color: #fff;
  position: relative;
  min-height: 30rpx;
}

.card .tt {
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #FFFFFF;
  margin-top: 26rpx;
}

.card .earnings {
  font-family: PingFangSC-Semibold;
  font-size: 68rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  padding-bottom: 40rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.18);
  margin-bottom: 28rpx;
}

.card .txt {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}

.card .number {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #FFFFFF;
}

.card .code {
  position: absolute;
  right: 0;
  top: 0;
  background: #0DAA4F;
  border-bottom-left-radius: 34rpx;
  height: 62rpx;
  line-height: 62rpx;
  padding-left: 20rpx;
  padding-right: 16rpx;
}

.card .btn {
  position: absolute;
  right: 30rpx;
  top: 92rpx;
  background: #fff;
  border-radius: 44rpx;
  width: 180rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #04B64E;
}

.page-tt {
  font-family: PingFangSC-Semibold;
  font-size: 20px;
  color: #333333;
  margin-top: 52rpx;
  margin-bottom: 40rpx;
}

.item {
  padding: 20rpx;
  background: #FFFFFF;
  border: 1px solid #F1F1F1;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.item text {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #333333;
}

.item .txt {
  font-family: PingFangSC-Semibold;
  font-size: 44rpx;
  color: #333333;
  margin-top: 20rpx;
}