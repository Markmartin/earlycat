.container{
  padding: 160rpx 30rpx;
  position: relative;
  z-index: 1;
}
.box{
  padding-bottom: 18rpx;
  border-bottom: 1px solid #D8D8D8;
}
.box .tt{
  font-family: PingFangSC-Semibold;
  font-size: 25px;
  color: #333333;
  width: 50rpx;
  text-align: center;
  margin-right: 8rpx;
  height: 72rpx;
  line-height: 72rpx;
}
.box .input-placeholder{
  font-family: PingFangSC-Semibold;
  font-size: 50rpx;
  color: #DEDEDE;
}
.box input{
  font-family: PingFangSC-Semibold;
  font-size: 50rpx;
  color: #333333;
  height: 72rpx;
  line-height: 72rpx;
}
.info{
  margin-top: 24rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666666;
  justify-content: space-between;
}
.info .txt{
  color: #A3A3A3;
}
.btn{
  background: #04B64E;
  border-radius: 6rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #FFFFFF;
  text-align: center;
  width: 600rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 auto;
  margin-top: 120rpx;
}
.btn[disabled],.btn.disabled {
  color: #fff !important;
  background: #5BE394 !important;
}
.link{
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #04B64E;
  margin-top: 40rpx;
  text-decoration: underline;
}
.modal{
  display: none;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 100;
}
.modal .bg{
  position: fixed;
  z-index: 1;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0,0,0,0.60);
}
.modal.show{display: block;}
.modal .body{
  width: 700rpx;
  margin: 0 auto;
  background: #FFFFFF;
  border-radius: 20rpx;
  position: relative;
  z-index: 10;
  top: 45%;
  transform: translateY(-50%);
  padding: 60rpx 30rpx;
}
.modal .tt{
  font-family: PingFangSC-Semibold;
  font-size: 36rpx;
  color: #333333;
  margin-bottom: 30rpx;
  text-align: center;
}
.modal .txt{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  line-height: 40rpx;
  max-height: 800rpx;
  overflow-y: auto;
}
.modal .txt text{padding-bottom: 20rpx;display: block;}
.closeBtn{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 50%;
  margin-left: -40rpx;
  bottom: -120rpx;
}