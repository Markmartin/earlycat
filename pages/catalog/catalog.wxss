.catalog {
  position: relative;
  width: 100%;
  margin-top: 88rpx;
  height: calc(100vh - 88rpx);
  background: #fff;
  display: flex;
}

.catalog .nav {
  width: 190rpx;
  /* padding-top: 88rpx; */
  background: #F5F5F5;
}

.catalog .nav .item {
  text-align: center;
  line-height: 90rpx;
  width: 190rpx;
  height: 90rpx;
  color: #525252;
  font-size: 28rpx;
  font-weight: bold;
  border-left: 6rpx solid #fff;
}

.catalog .nav .item.active {
  color: #80ba64;
  font-size: 30rpx;
  border-left: 6rpx solid #80ba64;
  background: #fff;
}

.nav-sub-wrap {
  position: sticky;
  width: 560rpx;
  top: 0;
  z-index: 10;
  background: #fff;
  border-bottom: #ebebeb 1rpx solid;
  font-size: 28rpx;
}

.nav-sub-list {
  width: 500rpx;
  /* padding-right: 170rpx; */
  position: relative;
  background: #fff;
  white-space: nowrap;
  height: 60rpx;
  z-index: 10;
}

.nav-sub-item {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  font-weight: bold;
  color: #525252;
}

.nav-sub-active {
  color: #80ba64;
}

.nav-sub-btn {
  position: absolute;
  z-index: 11;
  right: 0;
  top: 0;
  background: #fff;
  width: 70rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.nav-sub-btn image {
  display: block;
  margin: 0 auto;
  margin-top: 15rpx;
  width: 30rpx;
  height: 30rpx;
  transform: rotate(90deg);
}

.nav-sub-btn.up image {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(-90deg);
}

.nav-sub-btn::after {
  content: "";
  width: 30rpx;
  position: absolute;
  left: -28rpx;
  height: 60rpx;
  top: 0;
  background: linear-gradient(to right, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1));
}

.nav-sub-box {
  z-index: 10;
  position: absolute;
  width: 100%;
  left: 0;
  top: 60rpx;
  right: 0;
  background: #fff;
  padding: 0 20rpx 20rpx 20rpx;
  border-bottom: #ebebeb 1rpx solid;
}

.nav-sub-box view {
  display: inline-block;
  position: relative;
  width: 33%;
  margin-top: 20rpx;
}

.nav-sub-box text {
  display: block;
  /* width: 100%; */
  margin-left: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: #ebebeb 1rpx solid;
  border-radius: 40rpx;
}

.nav-sub-box .nav-sub-active text {
  color: #04B64E;
  border: #04B64E 1rpx solid;
}

.nav-sub-bg {
  position: fixed;
  left: 190rpx;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 1;
  background: rgba(255, 255, 255, 0.5);
}

.catalog .cate {
  flex: 1;
  height: 100%;
  /* padding-top: 88rpx; */
}

.banner {
  display: block;
  height: 222rpx;
  width: 100%;
  position: relative;
}

.banner .image {
  position: absolute;
  top: 30rpx;
  left: 0;
  border-radius: 4rpx;
  height: 192rpx;
  width: 100%;
}

.banner .txt {
  position: absolute;
  top: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  left: 0;
  height: 192rpx;
  line-height: 192rpx;
  width: 100%;
}

.catalog .hd {
  height: 108rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.catalog .hd .txt {
  font-size: 24rpx;
  text-align: center;
  color: #333;
  padding: 0 10rpx;
  width: auto;
}

.catalog .hd .line {
  width: 40rpx;
  height: 1px;
  background: #d9d9d9;
}

.catalog .bd {
  height: auto;
  width: 100%;
  overflow: hidden;
}

.catalog .bd .item {
  display: block;
  float: left;
  height: 216rpx;
  width: 144rpx;
  margin-right: 34rpx;
}

.catalog .bd .item.last {
  margin-right: 0;
}

.catalog .bd .item .icon {
  height: 144rpx;
  width: 144rpx;
}

.catalog .bd .item .txt {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  height: 72rpx;
  width: 144rpx;
}

.goods {
  height: auto;
  width: 100%;
  position: relative;
  z-index: 1;
}

.goods .item {
  display: block;
  display: flex;
  padding: 25rpx 20rpx;
  /* padding-right: 20rpx; */
  border-bottom: #ebebeb 1rpx solid;
  position: relative;
}

.goods .item:last-child {
  border-bottom: 0;
}

.goods .icon {
  min-width: 180rpx;
  width: 180rpx;
  height: 180rpx;
  margin: 0;
  padding: 0;
}

.goods .pre-icon {
  position: absolute;
  left: 20rpx;
  /* top: 20rpx; */
  width: 60rpx;
  height: 60rpx;
}

.goods .cont {
  flex: 1;
  margin-left: 18rpx;
}

.goods .tt {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 5rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods .info {
  font-size: 20rpx;
  height: 70rpx;
  color: #5e5e5e;
}

.goods .info text {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods .sold {
  font-size: 20rpx;
  color: #5e5e5e;
}

.goods .price {
  position: relative;
  /* display: flex; */
  /* justify-content: space-between; */
}

.goods .btn {
  position: absolute;
  right: 0;
  top: -10rpx;
}

.goods .btn view {
  display: inline-block;
  vertical-align: middle;
  padding: 20rpx 10rpx;
}

.goods .btn image {
  width: 37rpx;
  height: 37rpx;
  margin: 0;
  padding: 0;
  display: block;
}

.goods .btn text {
  vertical-align: middle;
  font-size: 24rpx;
  color: #5e5e5e;
  padding: 0 15rpx;
  font-weight: bold;
}

.goods .item .gray-txt {
  width: 180rpx;
  height: 180rpx;
  background-color: rgba(0, 0, 0, 0.3);
  text-align: center;
  line-height: 180rpx;
  color: #fff;
  position: absolute;
  left: 20rpx;
  top: 25rpx;
  display: none;
}

.goods .item.gray .gray-txt {
  display: block;
}

.goods .item.gray .tt,
.goods .item.gray .info,
.goods .item.gray .sold,
.goods .item.gray .price view,
.goods .item.gray .price text {
  color: #b2b2b2 !important;
}

.goods .item.gray .btn {
  display: none;
}

.loading {
  text-align: center;
  font-size: 32rpx;
  color: #b2b2b2;
  padding: 20rpx;
}

.loading image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}

.loading image,
.loading text {
  vertical-align: middle;
}


